---
export interface NavItem { href: string; label: string }
const nav: NavItem[] = [
  { href: '/', label: 'Home' },
  { href: '/neighbourhoods/', label: 'Neighbourhoods' },
  { href: '/about/', label: 'About' },
  { href: '/contact/', label: 'Contact' },
];
---

<header class="site-header" role="banner">
  <div class="bar">
    <a class="brand" href="/" aria-label="Fernie Real Estate">
      <span class="brand-text">Fernie Real Estate</span>
    </a>

    <button class="menu-btn" aria-controls="site-nav" aria-expanded="false"
      onclick="
        const n=document.getElementById('site-nav');
        const o=this.getAttribute('aria-expanded')==='true';
        this.setAttribute('aria-expanded', String(!o));
        n.classList.toggle('open');
      ">
      <span class="sr">Menu</span>
      â˜°
    </button>

    <nav id="site-nav" class="nav" aria-label="Primary">
      {nav.map(i => <a href={i.href}>{i.label}</a>)}
    </nav>
  </div>
</header>

<style>
  .site-header{position:sticky;top:0;z-index:50;background:#fff;border-bottom:1px solid #eceff1}
  .bar{display:flex;align-items:center;justify-content:space-between;gap:1rem;max-width:1080px;margin:0 auto;padding:10px 16px}
  .brand{display:flex;align-items:center;text-decoration:none;color:#111;font-weight:800}
  .brand-text{font-size:1.2rem;letter-spacing:.3px}
  .nav{display:flex;gap:.5rem}
  .nav a{color:#111;text-decoration:none;padding:.5rem .7rem;border-radius:.6rem;font-weight:600}
  .nav a:hover{background:#f5f7f9}
  .menu-btn{display:none;font-size:1.25rem;line-height:1;background:none;border:0;padding:.4rem .6rem;border-radius:.6rem}
  .menu-btn:focus-visible{outline:2px solid #2ea}
  .sr{position:absolute;clip:rect(0,0,0,0);clip-path:inset(50%);height:1px;width:1px;overflow:hidden;white-space:nowrap}

  @media (max-width: 820px){
    .menu-btn{display:inline-block}
    .nav{display:none;position:absolute;left:0;right:0;top:100%;background:#fff;border-bottom:1px solid #eceff1;border-top:1px solid #eceff1;padding:8px 16px;gap:0}
    .nav.open{display:flex;flex-direction:column}
    .nav a{padding:.8rem 0;border-radius:.4rem}
    .bar{padding:10px 14px}
  }
</style>
